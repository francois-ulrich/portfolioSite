{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es5",
        "lib": ["es2015", "es2017", "dom"],
        "jsx": "react",
        "allowJs": true,
        "allowSyntheticDefaultImports": true, // import * as React from "react"; ==> import React from "react";
    },
    "include": [
        "./src/**/*"
    ]
}